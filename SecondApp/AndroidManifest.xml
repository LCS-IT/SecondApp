<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="moreland.Ryan.firstapplication"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="moreland.Ryan.firstapplication.IntroScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="moreland.Ryan.firstapplication.BluetoothScreen2"
            android:label="@string/title_pair_with_bluetooth" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="moreland.Ryan.firstapplication.MainActivity" />
        </activity>
        <activity
            android:name="moreland.Ryan.firstapplication.MainMenu"
            android:label="@string/title_activity_main_menu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="moreland.Ryan.SecondApp" />
        </activity>
        <activity
            android:name="moreland.Ryan.firstapplication.ShowMap"
            android:label="@string/title_show_map" >
        </activity>
        <activity
            android:name="moreland.Ryan.firstapplication.GetDirections"
            android:label="@string/title_activity_get_directions" >
        </activity>
    </application>

</manifest>