<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/title_main_menu" />

    <EditText
        android:id="@+id/pair_with_bluetooth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/title_pair_with_bluetooth" />

    <EditText
        android:id="@+id/go_to_map"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/title_show_map" />

    <EditText
        android:id="@+id/go_to_get_directions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/title_activity_get_directions" />
        
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="388dp"
        android:src="@drawable/mm_logo" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="goToGetDirections"
        android:text="@string/title_activity_get_directions" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:onClick="goToShowMap"
        android:text="@string/title_show_map" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:onClick="goToBluetooth"
        android:text="@string/pair_now" />

</RelativeLayout>